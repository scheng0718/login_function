<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <h1 class="text-center mt-3">Create Account</h1>
    <div class="card card-body">
      <form action="/users/register" method="POST">
        <div class="form-group my-2">
          <label for="firstName">First Name</label>
          <input type="text" id="firstName" name="firstName" class="form-control" placeholder="First Name" value="{{ firstName }}">
        </div>
        <div class="form-group my-2">
          <label for="lastName">Last Name</label>
          <input type="text" id="lastName" name="lastName" class="form-control" placeholder="Last Name" value="{{ lastName }}">
        </div>
        <div class="form-group my-2">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="account@example.com" value="{{ email }}">
        </div>
        <div class="form-group my-2">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Type Your Password"
            value="{{password}}">
        </div>
        <div class="form-group my-2">
          <label for="confirmPassword">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Confirm your Password" value="{{ confirmPassword }}">
        </div>
        <div class="d-grid col-12 mx-auto">
          <button type="submit" class="btn btn-primary btn-block mt-3">Create Account</button>
        </div>
      </form>
      <p class="lead mt-3">
        Already have an account? <a href="/users/login">Sign in</a>
      </p>
    </div>
  </div>
</div>